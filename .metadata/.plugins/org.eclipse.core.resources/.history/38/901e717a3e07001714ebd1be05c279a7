package desafio.ustore.app;

import java.util.Collections;
import java.util.Scanner;
import java.util.Date;

import desafio.ustore.objetos.Usuario;
import desafio.ustore.repositorio.RepositorioUsuario;

import java.util.ArrayList;

public class Aplicacao {

	public static void main(String[] args) {
//		ArrayList<String> Nomes = new ArrayList<>();
		RepositorioUsuario repositorioUsuario = new RepositorioUsuario();
		Usuario usuario = new Usuario();
		Scanner ent = new Scanner(System.in);
		String continuar;
		int esc,i=0,saida=2;
		
//		Dados Cadastrais
		
		String nome, senha, email;
		int telefone;
		
		
		while (saida>0)
		{
			System.out.println("Bem Vindo ao Cadastro de Usuarios\n");
			System.out.println("*****************************\n");
			System.out.println("O que deseja fazer?\n");
			System.out.println("1 - Cadastrar Novo Usuario");
			System.out.println("2 - Consultar Usuario");
			System.out.println("3 - Excluir Usuario");
			System.out.println("0 - Sair\n");
			esc = ent.nextInt();
			if (esc>0)
			{
				switch (esc)
				{
					case 1:
						System.out.println("Bem Vindo ao Cadastro de Usuarios\n");
						System.out.println("*****************************\n");
						do
						{
							System.out.println("Digite abaixo os dados do usuario que deseja cadastrar:\n");
							nome = new Scanner(System.in).nextLine();
							if (Nomes.indexOf(nome) < 0)
							{
								Nomes.add(nome);
								repositorioUsuario.salvar(usuario);
								System.out.printf("%s foi adicionado a lista de alunos.\n\n",Nomes.get(i));
								++i;
								System.out.println("Adicionar mais alunos? S / N\n");
								continuar = new Scanner(System.in).nextLine();
							}
							else
							{
								System.out.println("Aluno já existente. Deseja adicionar outro aluno? S / N\n");
								continuar = new Scanner(System.in).nextLine();
							}
						}while(continuar.equalsIgnoreCase("S"));
					break;
					
					case 2:
						int y = 1;
						do
						{
							System.out.println("------Consulta de Usuarios------\n");
							System.out.println("Escolha a forma da sua consulta:\n");
							System.out.println("1 - Listar por Ordem Alfabetica");
							System.out.println("2 - Listar por Ordem Cadastral");
							System.out.println("3 - Consultar um Usuario Especifico\n");
							esc = ent.nextInt();
							
							switch (esc)
							{
								case 1:
									ArrayList<String> nome_ord = new ArrayList<>(Nomes);
									Collections.sort(nome_ord);
									for (String x:nome_ord)
									{
										System.out.println(x);
									}
								break;
								
								case 2:
									for (String x:Nomes)
									{
										System.out.println(x);
									}
								break;
								
								case 3:
									System.out.println("Digite o nome do aluno:\n");
									nome = new Scanner(System.in).nextLine();
									if (Nomes.indexOf(nome) > -1)
									{
										System.out.println(" - "+Nomes.get(Nomes.indexOf(nome)));
									}
									else
									{
										System.out.println("Aluno não encontrado.\n");
									}
								break;
							}
							System.out.println("\nDeseja fazer uma nova consulta?\n");
							System.out.println("1 - Sim");
							System.out.println("2 - Nao\n");
							y = ent.nextInt();
						}while(y<2);
					break;
					
					case 3:
						int z = 1;
						System.out.println("------Exclusão de Usuarios------\n");
						while (z < 2)
						{
							System.out.println("Digite o nome do aluno a ser excluido:\n");
							nome = new Scanner(System.in).nextLine();
							if (Nomes.indexOf(nome)>-1)
							{
								Nomes.remove(Nomes.indexOf(nome));
								System.out.println("Aluno "+nome+" removido.\n");
							}
							else
							{
								System.out.println("Aluno não encontrado.\n");
							}
							System.out.println("Deseja fazer uma nova exclusão?\n");
							System.out.println("1 - Sim");
							System.out.println("2 - Não\n");
							z = ent.nextInt();
						}
					break;
				}
			}
			else
			{
				saida = -1;
				System.out.println("Obrigado por usar o Cadastro Escolar.");
			}
		}
	}

}
